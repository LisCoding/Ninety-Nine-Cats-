<% action = (user.persited? ? user_url(user) : user_url) %>
<% method = (user.persited? ? "patch" : "post") %>
<% message = (user.persited? ? "Update user"): "Create user" %>

<form action="<%= action %>" method="post">
  <input
    type="hidden"
    name="_method"
    value="<%= method %>">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label for="user_username">Username</label>
  <input
    type="text"
    name="user[username]"
    id="user_name">
  <br>

  <label for="user_password">Password</label>
    <input
      type="text"
      name="user[password]"
      id="user_passeord">
    <br>

    <input type="submit" value="<%= message %>">
</form>
